
                {% if dons|length > 0 %}
                <form action="" method="post">
                    <div class="row">
                        <div class="span3 offset9">
                            <button type="submit" name="">
                                <i class=""></i>
                                Envoyer le reçu
                            </button>
                        </div>
                    </div>
                    <table class="table table-bordered table-striped">
                        <thead>
                            <tr>
                                <th></th>
                                <th>Nom du donateur</th>
                                <th>Adresse email</th>
                                <th>Référence</th>
                                <th>Montant</th>
                                <th>Date du don</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for don in dons %}
                        <tr>
                            <td><input type="checkbox" name="id[]" value="{{ don.id }}"/></td>
                            <td>{{ don.donateur.nom }} {{ don.donateur.prenom }}</td>
                            <td>{{ don.donateur.email }}</td>
                            <td>{{ don.identPaiement }}</td>
                            <td>{{ don.montant }}</td>
                            <td>{{ don.getDatePaiement(null)|date }}</td>
                            <td>
                                <a href="" class="btn btn-warning">
                                    <i class=""></i>
                                    Modifier
                                </a>
                                <a href="" class="btn btn-danger">
                                    <i class=""></i>
                                    Supprimer
                                </a>
                                <a href="" class="btn btn-primary">
                                    <i class=""></i>
                                    Envoyer le reçu
                                </a>
                            </td>
                        </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </form>
                {% if dons.haveToPaginate() %}
                    {% include "Dons/_pagination.html.twig" %}
                {% endif %}
                {% else %}
                <div class="alert alert-error">
                    Aucun don.
                </div>
                {% endif %}